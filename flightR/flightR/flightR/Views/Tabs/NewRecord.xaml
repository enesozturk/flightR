<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="flightR.Views.Tabs.NewRecord"
             Title="New Record">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="Large"></Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblLat" Text="Lat: 0.000000"></Label>
            <Label x:Name="lblLong" Text="Long: 0.000000"></Label>
            <Label x:Name="lblAlt" Text="Alt: 0.000000"></Label>
            <Label x:Name="lblCounter" Text="Counter: "></Label>
            <Button Text="Start Record" Clicked="btnRecord"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>