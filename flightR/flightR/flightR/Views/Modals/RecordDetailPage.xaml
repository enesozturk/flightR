<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="flightR.Views.Modals.RecordDetailPage"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblRecordId" Text="Id"></Label>
            <maps:Map HorizontalOptions="FillAndExpand"
                x:Name="rdMap"
                HasScrollEnabled="True"
                HasZoomEnabled="True"
                IsShowingUser="true" 
                MapType="Hybrid"
                />
            <Slider x:Name="flightSlider"/>
            <Label x:Name="sliderValue" Text="-"></Label>
            <!--<ListView x:Name="pointList" SeparatorColor="Transparent">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Altitude}" TextColor="Black"></TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>